<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout android:layout_height="0dp"
android:layout_width="match_parent"
        android:id="@+id/question"
        android:layout_weight="3" >
        <include layout="@layout/question_generic"></include>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:weightSum="10"
        >



        <LinearLayout android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/caculatrice"
            android:layout_weight="5">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/seven_to_nine"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3" >

                    <Button
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="1"
                        android:textSize="25sp"
                        android:onClick="creer" />

                    <Button
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="2"
                        android:textSize="25sp"
                        android:onClick="creer" />

                    <Button
                        android:id="@+id/three"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="3"
                        android:textSize="25sp"
                        android:onClick="creer" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/four_to_six"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_below="@+id/seven_to_nine"
                    android:layout_alignParentStart="true">

                    <Button
                        android:id="@+id/four"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="4"
                        android:textSize="25sp"
                        android:onClick="creer" />

                    <Button
                        android:id="@+id/five"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="5"
                        android:textSize="25sp"
                        android:onClick="creer" />

                    <Button
                        android:id="@+id/six"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="6"
                        android:textSize="25sp"
                        android:onClick="creer" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/f"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_below="@+id/four_to_six"
                    android:layout_alignParentStart="true">


                    <Button
                        android:id="@+id/seven"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="7"
                        android:textSize="25sp"
                        android:onClick="creer" />

                    <Button
                        android:id="@+id/eight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="8"
                        android:textSize="25sp"
                        android:onClick="creer" />

                    <Button
                        android:id="@+id/nine"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="9"
                        android:textSize="25sp"
                        android:onClick="creer" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/last"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_below="@+id/f"
                    android:layout_alignParentStart="true">

                    <Button
                        android:id="@+id/annuler"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="AC"
                        android:textSize="25sp"
                        android:onClick="annuler" />

                    <Button
                        android:id="@+id/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="0"
                        android:textSize="25sp"
                        android:onClick="creer" />

                    <Button
                        android:id="@+id/ok"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.21"
                        android:text="OK"
                        android:textSize="25sp"
                        android:onClick="valider" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_height="match_parent"
            android:id="@+id/partie_text"
            android:layout_width="0dp"
            android:layout_weight="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                android:text="_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unite1"
                android:layout_weight="1"
                    android:textSize="60dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="80dp" />

                <TextView
                    android:text="_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/unite2"
                    android:layout_weight="1"
                    android:textSize="60dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/unite1"
                    android:layout_marginStart="50dp" />
            </RelativeLayout>

        </LinearLayout>

        </LinearLayout>
    <include layout="@layout/victory"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/victory"/>
</LinearLayout>