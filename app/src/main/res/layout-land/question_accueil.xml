<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bubble"
        android:background="@color/colorAccent"
        android:adjustViewBounds="true"
        android:maxHeight="110dp"
        android:maxWidth="800dp"
        android:minHeight="110dp"
        android:minWidth="800dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        />


    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bubble"
        android:id="@+id/grid"
        android:numColumns="2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/avatar_guide"
        android:id="@+id/avatar_question"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:layout_alignTop="@+id/bubble"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_text"
        android:textSize="30sp"
        android:adjustViewBounds="false"
        android:layout_alignBottom="@+id/avatar_question"
        android:layout_toEndOf="@+id/avatar_question"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold" />

    <ImageView
        app:srcCompat="@drawable/cursor_click"
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/bubble"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Appuyez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginEnd="75dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:textStyle="normal|bold" />


</RelativeLayout>