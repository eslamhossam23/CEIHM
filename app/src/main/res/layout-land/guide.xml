<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/background"
        android:background="@drawable/background"
        android:layout_alignTop="@+id/avatar_guide"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/avatar_guide"
        android:id="@+id/avatar_guide"
        android:adjustViewBounds="true"
        android:maxHeight="90dp"
        android:maxWidth="90dp"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:text="Text"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/avatar_guide"
        android:layout_toEndOf="@+id/avatar_guide"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cursor"
        android:id="@+id/cursor"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:adjustViewBounds="true"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/hint"
        android:layout_alignParentEnd="true" />

</RelativeLayout>