<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/avatar_guide"
        android:id="@+id/avatar_question"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bubble_square"
        android:id="@+id/bubble"
        android:adjustViewBounds="true"
        android:maxHeight="110dp"
        android:maxWidth="800dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/avatar_question" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_text"
        android:textSize="14sp"
        android:adjustViewBounds="false"
        android:layout_marginEnd="13dp"
        android:layout_alignBottom="@+id/avatar_question"
        android:layout_alignEnd="@+id/bubble" />
</RelativeLayout>